# AI Data Factory Configuration

# Debug mode (set to true for development)
DEBUG=false

# Database (SQLite path — used inside Docker containers)
DATABASE_URL=sqlite+aiosqlite:///db/factory.db

# Redis
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO

# LLM API Key (required for training data generation)
# Supports OpenAI, Anthropic, or any LiteLLM-compatible provider
OPENAI_API_KEY=sk-your-key-here
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# HuggingFace (optional — for dataset upload)
HUGGINGFACE_TOKEN=hf_your-token-here

# Generation
GENERATION_MODEL=gpt-4o-mini
GENERATION_MAX_CONCURRENT=5
GENERATION_EXAMPLES_PER_CHUNK=3

# Quality Control
QUALITY_MIN_SCORE=0.7

# Scraping
SCRAPING_MAX_CONCURRENT=3
SCRAPING_RATE_LIMIT=2.0
